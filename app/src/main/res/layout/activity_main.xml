<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/imgPokeball"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pokeball" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgFuego"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/charmander" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgPlanta"
        android:layout_alignTop="@+id/imgFuego"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bulbasur"
        android:layout_alignBottom="@+id/imgFuego" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgAgua"
        android:src="@drawable/squirtle"
        android:layout_alignTop="@+id/imgPlanta"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgElectricidad"
        android:layout_below="@+id/imgPlanta"
        android:layout_alignStart="@+id/imgPlanta"
        android:src="@drawable/pichu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblFuego"
        android:layout_alignTop="@+id/imgFuego"
        android:layout_alignParentStart="true"
        android:text="Charmander" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPlanta"
        android:layout_alignTop="@+id/imgPlanta"
        android:layout_alignStart="@+id/imgPlanta"
        android:text="Bulbasur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAgua"
        android:layout_alignTop="@+id/imgAgua"
        android:layout_alignStart="@+id/imgAgua"
        android:text="Squirtle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblElectricidad"
        android:layout_alignBottom="@+id/imgElectricidad"
        android:layout_toStartOf="@+id/imgAgua"
        android:text="Pichu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:id="@+id/btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
